            {
                "separator":true,
                "color":"#FFFFFF",
                "size":1
            },
            {
                "text":"Worker Type",
                "size":23,
                "color":"#8B3626"
            },
            {
                "text":"City Designer:",
                "size":20,
                "color":"#CDCDB4"
            },
            {
                "text":"Can build [District] improvements on tiles",
                "size":18
            },
            {
                "text":"e.g. [Unique District], [City], [Holy Site], [Academy], [Harbor], [Business Center], [Entertainment], [Landmark], [Industrial Zone], [Municipal Square]",
